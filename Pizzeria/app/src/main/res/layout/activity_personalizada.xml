<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalizadaActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="119dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="119dp"
        android:text="Crea tu pizza personalizada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="248dp"
        android:layout_height="173dp"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <RadioGroup
            android:id="@+id/miRadioGroup"
            android:layout_width="356dp"
            android:layout_height="155dp">

            <RadioButton
                android:id="@+id/rbPeque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="PequeÃ±a" />

            <RadioButton
                android:id="@+id/rbMediana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mediana" />

            <RadioButton
                android:id="@+id/rbGrande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grande" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btnValidar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="41dp"
        android:text="Validar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/txtOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="34dp"
        android:text="Opcion:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="404dp"
        android:layout_height="160dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <CheckBox
            android:id="@+id/chkQueso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Queso"
            app:layout_column="0"
            app:layout_row="0" />

        <CheckBox
            android:id="@+id/chkJamon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Jamon"
            app:layout_column="1"
            app:layout_row="0" />

        <CheckBox
            android:id="@+id/chkSalchichas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salchichas"
            app:layout_column="0"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/chkAtun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atun"
            app:layout_column="2"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/chkPeperoni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepperoni"
            app:layout_column="1"
            app:layout_row="2" />

        <CheckBox
            android:id="@+id/chkPollo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Pollo"
            app:layout_column="2"
            app:layout_row="2" />

        <CheckBox
            android:id="@+id/chkBacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bacon"
            app:layout_column="0"
            app:layout_row="2" />

        <CheckBox
            android:id="@+id/chkGorgonzola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gorgonzola"
            app:layout_column="1"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/chkParmesano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parmesano"
            app:layout_column="2"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>